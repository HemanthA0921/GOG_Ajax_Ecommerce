<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../css/admin_dashboard.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin | <%= title %></title>
</head>

<body>
    <div class="sidebar">
        <a href="/admin">
            <div class="logo-details">
                <i class='bx bxs-home-smile'></i>
                <span class="logo_name">GOG</span>
            </div>
        </a>
        <ul class="nav-links">
            <li>
                <a href="/admin">
                    <i class='bx bx-grid-alt'></i>
                    <span class="links_name">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/admin/productDetails">
                    <i class='bx bx-box'></i>
                    <span class="links_name">Products</span>
                </a>
            </li>
            <li>
                <a href="/admin/userDetails" class="active">
                    <i class='bx bx-heart'></i>
                    <span class="links_name">Users</span>
                </a>
            </li>
            <li>
                <a href="/admin/myOrders">
                    <i class='bx bx-list-ul'></i>
                    <span class="links_name">Order list</span>
                </a>
            </li>
            <li>
                <a href="/admin/addProduct">
                    <i class='bx bx-pie-chart-alt-2'></i>
                    <span class="links_name">Add Product</span>
                </a>
            </li>
            <li>
                <a href="/admin/messages">
                    <i class='bx bx-message'></i>
                    <span class="links_name">Messages</span>
                </a>
            </li>
            <li class="log_out">
                <a href="/logout">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">Log out</span>
                </a>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <nav>
            <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard">User Details</span>
            </div>
            <div class="search-box">
                <input type="text" placeholder="Search...">
                <i class='bx bx-search'></i>
            </div>
        </nav>

        <div class="home-content">
            <div class="overview-boxes">
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Order</div>
                        <div class="number">1245</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bx-cart-alt cart'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Sales</div>
                        <div class="number">879</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bxs-cart-add cart two'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Profit</div>
                        <div class="number">INR 5,02,876</div>
                        <div class="indicator">
                            <i class='bx bx-up-arrow-alt'></i>
                            <span class="text">Up from yesterday</span>
                        </div>
                    </div>
                    <i class='bx bx-cart cart three'></i>
                </div>
                <div class="box">
                    <div class="right-side">
                        <div class="box-topic">Total Return</div>
                        <div class="number">11,086</div>
                        <div class="indicator">
                            <i class='bx bx-down-arrow-alt down'></i>
                            <span class="text">Down From Today</span>
                        </div>
                    </div>
                    <i class='bx bxs-cart-download cart four'></i>
                </div>
            </div>

            <br>
        <h2>Customer Details :</h2>
        <br>
        <table class="table table-hover">
            <tr>
                <th><b>Username</b></th>
                <th><b>Email</b></th>
                <th><b>Created At</b></th>
                <th><b>Delete</b></th>
            </tr>
            <% for(let i=0; i<users.length; i++){ %>
                <tr>
                    <th>
                        <%= users[i].name %>
                    </th>
                    <th>
                        <%= users[i].email %>
                    </th>
                    <th>
                        <%= users[i].createdAt %>
                    </th>
                    <th>
                        <!-- <a href="/admin/deleteUser/<%= users.email %>"> -->
                            <center><a href="/admin/deleteUser/<%= users[i]._id %>"><button name="delete" type="submit" onclick="deletefunction()">Delete</a></center>
                        <!-- </a> -->
                    </th>
                </tr>
            <%} %>

        </table>
        </div>
    </section>
    <script>
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".sidebarBtn");
        sidebarBtn.onclick = function () {
            sidebar.classList.toggle("active");
            if (sidebar.classList.contains("active")) {
                sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
            } else
                sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
        }

        function deletefunction() {
            let text = "Do you want to delete the user";
            if (confirm(text) == true) {
                text = "User Deleted";
            } else {
                text = "You canceled!";
            }
        }
    </script>

</body>

</html>